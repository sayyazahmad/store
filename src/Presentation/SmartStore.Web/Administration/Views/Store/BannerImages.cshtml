@model IEnumerable<BannerImageModel>
@{
    ViewBag.Title = T("Admin.Catalog.Products.EditProductDetails").Text;
}
@using (Html.BeginForm("BannerImages", "Store", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="adminContent mb-5">
        <tr>
            <td colspan="2">
                <div class="admin-config-group">
                    <div class="head">@T("Admin.Catalog.Products.Pictures.AddNew")</div>
                </div>
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.FirstOrDefault().PictureId)
            </td>
            <td class="adminData">
                <input type="file" name="Image" id="Image" />
                @*@Html.EditorFor(model => model.PictureId, new { transientUpload = true })
                @Html.ValidationMessageFor(model => model.PictureId)*@
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                @Html.SmartLabelFor(model => model.FirstOrDefault().DisplayOrder)
            </td>
            <td class="adminData">
                @Html.EditorFor(model => model.FirstOrDefault().DisplayOrder)
            </td>
        </tr>
        <tr>
            <td class="adminTitle">
                &nbsp;
            </td>
            <td class="adminData">
                <button type="submit" name="add-product-picture" id="add-product-picture" class="btn btn-primary">
                    <i class="fa fa-plus"></i>
                    <span>@T("Admin.Catalog.Products.Pictures.AddButton")</span>
                </button>
            </td>
        </tr>
    </table>
    <div class="t-widget t-grid">
        <table width="100%">
            <thead class="t-grid-header">
                <tr>
                    <th>@Html.SmartLabelFor(model => model.FirstOrDefault().PictureId)</th>
                    <th>@Html.SmartLabelFor(model => model.FirstOrDefault().DisplayOrder)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="/admin/store/BannerPicture?url=@item.URL"  height="100"/> </td>
                        <td>@item.Id</td>
                        <td>
                            <a href="/admin/store/deletebannerimage/@item.Id" class="btn btn-danger">
                                <i class="fa fa-trash-o"></i>
                                <span>Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}