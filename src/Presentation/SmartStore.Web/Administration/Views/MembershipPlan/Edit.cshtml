@model SmartStore.Admin.Models.Membership.MembershipPlanModel

@{
    ViewBag.Title = T("Admin.MembershipPlans.Update").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            @T("Admin.MembershipPlans.Update")
            <a href='@Url.Action("List")'>(@T("Admin.MembershipPlans.BackToList"))</a>
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-warning">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
                <span>@T("Admin.Common.SaveContinue")</span>
            </button>
            <button type="submit" name="save" value="membershipplan-delete" id="membershipplan-delete" class="btn btn-danger">
                <i class="fa fa-trash-o"></i>
                <span>@T("Admin.Common.Delete")</span>
            </button>
        </div>
    </div>

    Html.RenderPartial("_CreateOrUpdate", Model);
}
@Html.DeleteConfirmation("membershipplan-delete")
