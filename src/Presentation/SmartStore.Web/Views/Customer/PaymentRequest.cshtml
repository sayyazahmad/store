@model List<CommissionRequestModel>
@using SmartStore.Admin.Models.Agent;
@{
    Html.AddTitleParts(T("PageTitle.Account").Text);

    Layout = "_MyAccount";
    ViewBag.PageClassToken = "paymentrequest";
    ViewBag.PageTitle = T("Account.PaymentRequest").Text;
}
@if (Model?.Count() == 0)
{
    <div class="alert alert-warning">@T("Account.BankUpdateRequest.NoRequest")</div>
}
<div class="add-address">
    <a class="btn btn-primary btn-lg add-address-button mb-4" href="@Url.Action("PaymentRequestAdd")" rel="nofollow">
        <i class="fa fa-plus"></i>
        <span>@T("Common.AddNew")</span>
    </a>
</div>
<div class="card-deck card-cols-sm-1 card-cols-lg-2">
    @foreach (var item in Model)
    {
        <div class="card card-shadow order-item">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().TotalCommission)</dt>
                    <dd class="col-sm-6">@item.TotalCommission</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().AvailableCommission)</dt>
                    <dd class="col-sm-6">@item.AvailableCommission</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().TotalProfit)</dt>
                    <dd class="col-sm-6 price">@item.TotalProfit</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().AvailableProfit)</dt>
                    <dd class="col-sm-6 price">@item.AvailableProfit</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().TotalWithdrawAmount)</dt>
                    <dd class="col-sm-6 price">@item.TotalWithdrawAmount</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().Status)</dt>
                    <dd class="col-sm-6 price">@item.RequestStatus.ToString()</dd>
                    <dt class="col-sm-6 font-weight-400 text-muted">@Html.DisplayNameFor(x => x.FirstOrDefault().CreatedOnUtc)</dt>
                    <dd class="col-sm-6 price">@item.CreatedOnUtc</dd>
                </dl>
            </div>
            <div class="card-footer d-flex p-0">
                <a class="btn btn-danger btn-flat rounded-0" href="@Url.Action("BankUpdateRequestDelete", new { id = item.Id })" rel="nofollow" id="deletebtn">
                    <i class="fa fa-trash-o"></i>
                    <span>Delete</span>
                </a>
            </div>
        </div>
    }
</div>