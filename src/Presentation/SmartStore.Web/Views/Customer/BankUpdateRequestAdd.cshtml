@using SmartStore.Admin.Models.Common;
@model BankUpdateRequestModel
@{
    Html.AddTitleParts(T("PageTitle.Account").Text);
    Layout = "_MyAccount";
    ViewBag.PageClassToken = "info";
    ViewBag.PageTitle = T("Account.BankUpdateRequest.NewRequest").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    }
    Html.RenderPartial("_CreateOrUpdateBankUpdateRequest", Model);
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-primary btn-lg save-address-button">
                <i class="fa fa-check"></i>
                <span>@T("Common.Save")</span>
            </button>
        </div>
    </div>
}